<div class="container">
  <%= link_to("戻る", self_url, {class: "btn btn-primary mb-3"}) %>
  <div class="container">
    <h2>マイプロフィール編集</h2>
    <%= form_with(model: @user, url: self_url, method: :put, class: 'border mt-4 mx-5 mb-2 pt-5 px-5 pb-4') do |form| %>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">name</label>
      <div class="col-sm-10">
        <%= form.text_field :name, class: "form-control" %>
      </div>
    </div>


    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">gender</label>
      <div class="col-sm-10">
        <div class="form-check">
          <label class="form-check-label">
            <%= form.radio_button :gender, :male, class: "form-check-input"%> 男
          </label>
        </div>
        <div class="form-check">
          <label class="form-check-label">
            <%= form.radio_button :gender, :female, class: "form-check-input"%> 女
          </label>
        </div>
      </div>
    </div>


    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">birthday</label>
      <div class="col-sm-10">
        <%= form.text_field :birthday, class: "form-control", type: :date %>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">email</label>
      <div class="col-sm-10">
        <%= form.text_field :email, class: "form-control", type: :email %>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">profile</label>
      <div class="col-sm-10">
        <%= form.text_area :profile, class: "form-control" %>
      </div>
    </div>

      <div class="actions text-center mt-4">
        <%= form.submit class: 'btn btn-primary ' %>
      </div>
    <% end %>
  </div>
</div>
