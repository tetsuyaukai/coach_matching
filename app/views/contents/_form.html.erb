<div class="container border">
<%= form_with(model: content, local: true) do |f| %>
  <% if content.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(content.errors.count, "error") %> prohibited this content from being saved:</h2>

      <ul>
      <% content.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <fieldset class="form-group row container" >
      <legend class="col-form-legend col-sm-2">場所</legend>
      <div class="col-sm-10">
        <% Place.all.each do |place| %>
        <div class="form-check">
          <label class="form-check-label">
            <%= f.radio_button :place_id, place.id, class: "form-check-input"%>
            <%= place.name %>
          </label>
        </div>
        <% end %>
      </div>
    </fieldset>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">日付</label>
      <div class="col-sm-10">
        <% date = content.scheduled_date || params[:date] || "" %>
        <%= f.text_field :scheduled_date, type: "date", class: "form-control", value: date, readonly: true %>
      </div>
    </div>
    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">時間</label>
      <div class="col-sm-10">

        <%= f.text_field :scheduled_time, type: "time", class: "form-control" %>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">メニュー</label>
      <div class="col-sm-10">

        <%= f.text_area :menu, class: "form-control" %>
      </div>
    </div>

  <div class="actions text-center">
    <%= f.submit :class=>"btn btn-primary" %>
  </div>
<% end %>
</div>
